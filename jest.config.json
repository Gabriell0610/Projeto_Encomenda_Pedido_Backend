{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": ["**/__tests__/**/*.+(ts|tsx)", "**/?(*.)+(spec|test).+(ts|tsx)"],

  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": ["src/service/itens/itens.service.ts", "src/service/cart/Cart.service.ts"],
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"]
}
